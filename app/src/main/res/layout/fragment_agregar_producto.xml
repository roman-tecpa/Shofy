<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_gravity="center"
            android:background="@drawable/bg_card">

            <!-- NOMBRE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/nombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. Colores"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#999"
                android:layout_marginTop="6dp" />

            <!-- DESCRIPCIÓN -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/descripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción del producto"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#999"
                android:layout_marginTop="6dp" />

            <!-- TIPO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de producto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <Spinner
                android:id="@+id/tipoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />

            <!-- STOCK -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad en stock"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/cantidadActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. 100"
                android:inputType="number"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#999"
                android:layout_marginTop="6dp" />

            <!-- CANTIDAD MÍNIMA -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad mínima"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/cantidadMinima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. 10"
                android:inputType="number"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#999"
                android:layout_marginTop="6dp" />

            <!-- PRECIO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/precioBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. 25.50"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#999"
                android:layout_marginTop="6dp" />

            <!-- BOTÓN -->
            <Button
                android:id="@+id/btnAgregarProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar producto"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E88E5"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:background="@drawable/bg_button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
