<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del producto: full width, grande y con borde redondeado -->
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/imgTipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del producto" />
        </androidx.cardview.widget.CardView>

        <!-- Nombre -->
        <TextView
            android:id="@+id/txtNombreDetalle"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/txtDescripcionDetalle"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Precio -->
        <TextView
            android:id="@+id/txtPrecioDetalle"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Stock -->
        <TextView
            android:id="@+id/txtTotalUnidades"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Selector de cantidad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnRestar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textSize="18sp"
                android:background="@drawable/bg_round_btn"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtCantidadCompra"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="12dp"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:background="@drawable/bg_qty_box" />

            <Button
                android:id="@+id/btnSumar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="18sp"
                android:background="@drawable/bg_round_btn"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Botón Agregar al carrito -->
        <Button
            android:id="@+id/btnAgregarCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar al carrito"
            android:layout_marginTop="36dp"
            android:backgroundTint="#67BC54"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Botón Comprar -->
        <Button
            android:id="@+id/btnRealizarCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizar compra"
            android:layout_marginTop="8dp"
            android:backgroundTint="#04C6ED"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
