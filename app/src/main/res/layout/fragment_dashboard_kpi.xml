<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:background="@drawable/bg_dashboard">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/transparent">

        </androidx.cardview.widget.CardView>

        <!-- ===== KPIs ===== -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Inventario/Agrupación -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvInventarioPorCategoria"
                        android:text="Inventario por categoría:"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:letterSpacing="0.02"
                        android:textColor="#1B1B1B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvAgrupacionPorCategoria"
                        android:text="Agrupación por categoría:"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Más/Menos vendido -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMasVendido"
                        android:text="Producto más vendido: -"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:letterSpacing="0.02"
                        android:textColor="#1B1B1B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="#EEEEEE" />

                    <TextView
                        android:id="@+id/tvMenosVendido"
                        android:text="Producto menos vendido: -"
                        android:textSize="16sp"
                        android:textColor="#5A5A5A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Total/Promedio -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTotalIngresos"
                        android:text="Total ingresos: $0.00"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:letterSpacing="0.02"
                        android:textColor="#1B1B1B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="#EEEEEE" />

                    <TextView
                        android:id="@+id/tvPromedioUnidad"
                        android:text="Promedio por unidad: $0.00"
                        android:textSize="16sp"
                        android:textColor="#5A5A5A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ===== Gráficas generales por producto ===== -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartUnidades"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_chart"
            android:padding="12dp"
            android:elevation="3dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartIngresos"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_chart"
            android:padding="12dp"
            android:elevation="3dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartIngresosPie"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_chart"
            android:padding="12dp"
            android:elevation="3dp" />

        <!-- ===== Barras horizontales: Inventario/Conteo por categoría (catálogo actual) ===== -->
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chartInvPorCategoria"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="16dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chartConteoPorCategoria"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
